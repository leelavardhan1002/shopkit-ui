{
  "name": "shopkit-official",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "gen": "cd packages/ui-generator && yarn generate",
    "storybook": "cd apps/docs && yarn storybook",
    "build-storybook": "cd apps/docs && yarn build-storybook",
    "test:watch": "cd packages/ui-core && jest --watch",
    "test": "cd packages/ui-core && jest --coverage",
    "release": "lerna publish",
    "release:ci": "lerna publish --yes --conventional-commits",
    "version": "lerna version --conventional-commits"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "lerna": "^8.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "semantic-release": "^23.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/ui-core",
    "packages/ui-theme"
  ]
}
