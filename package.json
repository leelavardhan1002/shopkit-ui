{
    "name": "shopkit-official",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "check-types": "turbo run check-types",
        "gen": "cd packages/ui-generator && yarn generate",
        "storybook": "cd apps/docs && yarn storybook",
        "build-storybook": "cd apps/docs && yarn build-storybook",
        "test:watch": "cd packages/ui-core && jest --watch",
        "test": "cd packages/ui-core && jest --coverage",
        "prepare": "husky",
        "commit": "git-cz"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@types/jest": "^29.5.12",
        "commitizen": "^4.3.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.2.5",
        "turbo": "^2.5.8",
        "typescript": "5.9.2"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "yarn@1.22.19",
    "workspaces": [
        "apps/*",
        "packages/*",
        "packages/ui-core",
        "packages/ui-theme"
    ],
    "config": {
        "commitizen": {
            "path": "./custom-adapters/cz-custom.cjs"
        }
    }
}
